         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
      <TextField fx:id="txtSelectedSupplement" editable="false" layoutX="204.0" layoutY="537.0" prefWidth="200" style="-fx-border-color: #1A1363;" />
      <Label layoutX="434.0" layoutY="537.0" text="Qty:">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
      <TextField fx:id="txtQuantity" layoutX="466.0" layoutY="537.0" prefWidth="60" style="-fx-border-color: #1A1363;" />

      <TableView fx:id="tableSppliments" layoutX="24.0" layoutY="108.0" prefHeight="400.0" prefWidth="400.0" style="-fx-border-color: #1A1363;">
          <columns>
              <TableColumn fx:id="columId" prefWidth="80" text="ID" />
              <TableColumn fx:id="columName" prefWidth="120" text="Name" />
              <TableColumn fx:id="columPrice" prefWidth="100" text="Price" />
              <TableColumn fx:id="columQty" prefWidth="100" text="Qty" />
          </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
      </TableView>
      <Label layoutX="411.0" layoutY="594.0" text="Total Amount: Rs.">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>


      <TableView fx:id="tableCart" layoutX="437.0" layoutY="108.0" prefHeight="400.0" prefWidth="415.0" style="-fx-border-color: #1A1363;">
