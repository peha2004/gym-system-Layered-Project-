             <TableColumn fx:id="columCartMemberId" prefWidth="100" text="Member ID" />
              <TableColumn fx:id="columCartName" prefWidth="120" text="Name" />
              <TableColumn fx:id="columCartQty" prefWidth="80" text="Qty" />
              <TableColumn fx:id="columCartPrice" prefWidth="100" text="Price" />
              <TableColumn fx:id="columCartTotal" prefWidth="100" text="Total" />
          </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
      </TableView>
      <Label layoutX="24.0" layoutY="17.0" text="Transaction ID:">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
      <TextField fx:id="txtTransactionId" editable="false" layoutX="134.0" layoutY="14.0" prefHeight="27.0" prefWidth="200.0" style="-fx-border-color: #1A1363;" />
      <Label layoutX="437.0" layoutY="17.0" text="Date:">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
      <Label layoutX="59.0" layoutY="54.0" text="Member:">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
      <ComboBox fx:id="cmboMemberId" layoutX="133.0" layoutY="54.0" prefWidth="200" promptText="Select Member" style="-fx-border-color: #1A1363;" />
   <Button fx:id="btnAddToCart" layoutX="537.0" layoutY="524.0" mnemonicParsing="false" onAction="#btnAddToCartOnAction" prefHeight="51.0" prefWidth="94.0" style="-fx-background-color: #392b78; -fx-border-color: white;" text="Add to Cart" textFill="WHITE">
      <font>
         <Font name="Arial Bold" size="13.0" />
      </font>
   </Button>
   <Button fx:id="btnsaveTransaction" layoutX="698.0" layoutY="576.0" mnemonicParsing="false" onAction="#btnsaveTransactionOnAction" prefHeight="51.0" prefWidth="142.0" style="-fx-background-color: #392b78; -fx-border-color: white;" text="Save Transaction" textFill="WHITE">
      <font>
         <Font name="Arial Bold" size="13.0" />
      </font>
   </Button>
   <Label fx:id="txtTransactionDate" layoutX="484.0" layoutY="17.0" prefHeight="18.0" prefWidth="94.0" style="-fx-border-color: #1A1363;">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
   <Label fx:id="txtTotalAmount" layoutX="536.0" layoutY="592.0" prefHeight="18.0" prefWidth="114.0" style="-fx-border-color: #1A1363;">
      <font>
         <Font name="Arial Bold" size="14.0" />
      </font>
   </Label>
   <Button fx:id="btnAddSupplement" layoutX="645.0" layoutY="44.0" mnemonicParsing="false" onAction="#btnAddSupplementOnAction" prefHeight="51.0" prefWidth="142.0" style="-fx-background-color: #392b78; -fx-border-color: white;" text="Add Supplement" textFill="WHITE">
      <font>
         <Font name="Arial Bold" size="13.0" />
      </font>
   </Button>
   <Button fx:id="btnDeleteSupplemet" layoutX="78.0" layoutY="584.0" mnemonicParsing="false" onAction="#btnDeleteSupplemetOnAction" prefHeight="51.0" prefWidth="94.0" style="-fx-background-color: #392b78; -fx-border-color: white;" text="Delete" textFill="WHITE">
      <font>
         <Font name="Arial Bold" size="13.0" />
      </font>
   </Button>
   <Button fx:id="btnUpdateSupplemet" layoutX="186.0" layoutY="584.0" mnemonicParsing="false" onAction="#btnUpdateSupplemetOnAction" prefHeight="51.0" prefWidth="94.0" style="-fx-background-color: #392b78; -fx-border-color: white;" text="Update" textFill="WHITE">
      <font>
         <Font name="Arial Bold" size="13.0" />
      </font>
   </Button>
   <Button fx:id="btnHistory" layoutX="698.0" layoutY="635.0" mnemonicParsing="false" onAction="#btnHistoryOnAction" prefHeight="35.0" prefWidth="142.0" style="-fx-background-color: gray; -fx-border-color: black;" text="See History">
      <font>
         <Font name="Arial Bold" size="13.0" />
      </font>
   </Button>

</AnchorPane>
