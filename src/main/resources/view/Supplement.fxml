<AnchorPane prefHeight="700.0" prefWidth="880.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gymsystem_layeredproject.controller.SupplementController">
      <Label layoutX="37.0" layoutY="542.0" text="Selected Supplement:">
